<section class="content-wrapper">
    <h2 class="lead text-secondary">Recent Posts</h2>
    <div class="text-center">
        {{#each posts as |post|}}
        <article class="post my-3">
            <div class="post-head p-2 d-flex flex-row align-items-center justify-content-between">
                <h3 class="post-title lead">{{post_title}}</h3>
                <p class="post-author text-muted">posted by {{user.username}} on {{created_at}}</p>
            </div>
            <div class="post-body text-secondary p-2">
                {{post_body}}
            </div>

        </article>
        <div class="post-meta text-right">
            <p>{{vote_count}} points |
            <a href="/post/{{id}}" class="clean-link">{{comments.length}} comments</a></p>
        </div>
        {{/each}}
    </div>
</section>