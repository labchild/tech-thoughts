<div class="post-head p-2 d-flex flex-row align-items-center justify-content-between">
    <h3 class="post-title lead">
        <a href="/post/{{id}}" class="clean-link post-title">{{post_title}}</a>
    </h3>
    <p class="post-author text-muted">posted by {{user.username}} on {{format_date created_at}}</p>
</div>
<div class="post-body text-dark p-2">
    {{post_body}}
</div>
<div class="post-meta text-right px-2 pt-2 text-muted">
    <p>
        <button type="button" class="clean-link btn-vote-count">{{vote_count}} {{format_plural 'point' vote_count}}</button>   |
        <a href="/post/{{id}}" class="clean-link">{{comments.length}} {{format_plural 'comment' comments.length}}</a>
    </p>
</div>