<section class="content-wrapper">
    <article class="post my-3">
        <div class="post-head p-2 d-flex flex-row align-items-center justify-content-between">
            <h3 class="post-title lead">{{post.post_title}}</h3>
            <p class="post-author text-muted">posted by {{post.user.username}} on {{post.created_at}}</p>
        </div>
        <div class="post-body text-secondary p-2">
            {{post.post_body}}
        </div>
        
    </article>
    <div class="post-meta text-left">
            {{post.vote_count}} points |
            <a href="/post/{{post.id}}" class="clean-link">{{post.comments.length}} comments</a>
        </div>
</section>